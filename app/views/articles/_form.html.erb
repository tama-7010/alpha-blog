<% if @article.errors.any? %>
  <h2>The following errors prevented article from getting created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-form-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-form-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
  <%= link_to "Cancel request and return to articles listing", articles_path %>
</div>
