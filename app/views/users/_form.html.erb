<%= render 'shared/errors', obj: @user %>

<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <%= f.label :username, class: "col-form-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :email, class: "col-form-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: "col-form-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-2 col-sm-10">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
    </div>
  </div>
<% end %>

<div align="center" class="col-xs-4 col-xs-offset-4">
  <%= link_to "[Cancel request and return to articles listing]", articles_path %>
</div>
